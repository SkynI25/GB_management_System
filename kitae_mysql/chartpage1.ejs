  <script>
    function pad(n, width, z) {
      z = z || '0';
      n = n + '';
      return n.length >= width ? n : new Array(width - n.length + 1).join(z) + n;
    }

    var ctx = document.getElementById("myChart");
    var results = {};
    var messages = {};
    var dates = ["<%=dates[0]%>", "<%=dates[1]%>"];
    var start = new Date(0);
    start.setFullYear(dates[0].split("-")[0], dates[0].split("-")[1] - 1, dates[0].split("-")[2]);
    var end = new Date(0);
    end.setFullYear(dates[1].split("-")[0], dates[1].split("-")[1] - 1, dates[1].split("-")[2]);

    while (start <= end) {
      var str = (start.getYear() + 1900) + "-" + pad((start.getMonth() + 1), 2) + "-" + pad(start.getDate(), 2);
      results[str] = 0;
      messages[str] = [];
      start = new Date(start.getTime() + 86400000);
    }
    console.log(results);
    <%
     for(var i = 0; i < datas.length; ++i) {
    %>
    if(parseInt("<%=datas[i].height%>") >= 100) {
      var times = "<%=datas[i].t%>".split(" ");
      results[times[0]] += 1;
      messages[times[0]].push(times[1]);
    }
    <%
    }
    %>

    console.log(results);
    for(var time in messages) {
      if(messages[time].length > 0) {
        console.log("hours  over  thresh  at  " + time);
        for(var  i=0; i<messages[time].length; ++i) {
          console.log(messages[time][i]);
        }
      }
    }
    var heights = [];
    for (var key in results) {
      heights.push(results[key]);
    }

    var mixedChart = new Chart(ctx, {
      type: 'line',
      data: {
        datasets: [{
          label: '100% 적재비율(%)',
          data: heights,
          lineTension: 0,
          backgroundColor: 'transparent',
          borderColor: '#ff3400',
          borderWidth: 4,
          pointBackgroundColor: '#ff3400',
          type: 'line'
        }],
        labels: Object.keys(results)
      },
      options: {
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        },
        legend: {
          display: true
        }
      }
    });
  </script>
